{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
         "name": "spectral-lint",
         "group": "pre-commit",
         "command": "npx",
         "args": ["spectral", "lint", "openapi/spec.yaml", "--fail-severity", "warn"]
      },
      {
         "name": "format-check",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["format", "Receipts.slnx", "--verify-no-changes"]
      },
      {
         "name": "build",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["build", "Receipts.slnx", "-p:TreatWarningsAsErrors=true", "--no-restore"]
      },
      {
         "name": "dto-staleness-check",
         "group": "pre-commit",
         "command": "git",
         "args": ["diff", "--exit-code", "--", "src/Presentation/API/Generated/"]
      },
      {
         "name": "drift-check",
         "group": "pre-commit",
         "command": "node",
         "args": ["scripts/check-drift.mjs"]
      },
      {
         "name": "test",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["test", "Receipts.slnx", "--no-build", "--verbosity", "normal"]
      }
   ]
}
