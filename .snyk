# Snyk Policy File
# This file defines rules for ignoring specific vulnerabilities

version: v1.25.0
ignore:
  # Ignore Log Forging false positives in ASP.NET Core controllers
  # These are flagged because GUID route parameters are logged, but they are safe because:
  # 1. ASP.NET Core validates [FromRoute] Guid parameters are proper GUIDs
  # 2. Structured logging with placeholders prevents injection attacks
  # 3. GUIDs cannot contain control characters like newlines
  SNYK-CC-117: # Log Forging (CWE-117)
    - '**/Controllers/**/*.cs':
        reason: 'ASP.NET Core validates Guid route parameters and structured logging prevents injection'
        expires: '2027-02-15T00:00:00.000Z'
        created: '2026-02-15T00:00:00.000Z'

  # Ignore Use of Hardcoded Credentials false positives
  # These may be configuration constants or test data that are not actual secrets
  SNYK-CC-798: # Use of Hardcoded Credentials (CWE-798)
    - '*':
        reason: 'False positive - these are configuration constants, not actual credentials'
        expires: '2027-02-15T00:00:00.000Z'
        created: '2026-02-15T00:00:00.000Z'